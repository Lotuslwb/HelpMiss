.userinfo {
    position: relative;
    width: 750rpx;
    height: 320rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    overflow:hidden;
    display: block;
    width: 160rpx;
    height: 160rpx;
    margin: 20rpx;
    margin-top: 50rpx;
    border-radius: 50%;
    border: 1px solid white;
    box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.userinfo text {
    color:  black;
    font-size: 14px;
}